<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
    </style>

    <!-- Main activity theme. -->
        <style name="MoviesTheme" parent="AppTheme">
            <item name="actionBarStyle">@style/ActionBar.Solid.PopMovies.Title</item>
        </style>

        <!-- main activity action bar styles -->
        <style name="ActionBar.Solid.PopMovies.Title" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
            <item name="displayOptions">useLogo|showHome|showTitle</item>
            <item name="logo">@mipmap/ic_launcher</item>

        </style>


</resources>
